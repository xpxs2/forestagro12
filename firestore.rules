
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // This function checks if the user is a staff member by seeing if their UID
    // exists as a document in the /staff collection.
    function isStaff() {
      return request.auth != null && exists(/databases/$(database)/documents/staff/$(request.auth.uid));
    }

    // A user can read and write their own document in the 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Staff can also read/write any user document
      allow read, write: if isStaff();
    }

    // The activity log is an immutable, append-only log.
    // Any authenticated user can create an entry.
    // No one can update or delete entries.
    match /activity_log/{logId} {
      allow create: if request.auth != null;
      allow read: if isStaff();
      allow update, delete: if false;
    }

    // Staff members can manage staff documents.
    match /staff/{staffId} {
      allow read, write: if isStaff();
    }

    // Plots can be read and written by staff.
    // More granular rules might be needed here later.
    match /plots/{plotId} {
        allow read, write: if isStaff();
    }
  }
}
